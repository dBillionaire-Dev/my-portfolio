{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    /* 1. Change 'preserve' to 'react-jsx' for Vite/React compatibility */
    "jsx": "react-jsx", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    /* 2. Change 'bundler' back to 'node' for better Vercel/Node compatibility */
    "moduleResolution": "node", 
    /* 3. Ensure this is true to help Vite/TS handle modern imports */
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
